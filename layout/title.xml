<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/message_title"
    android:orientation="horizontal">

        <ImageButton
            android:id="@+id/button_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_action_arrow_left"
            android:background="@android:color/transparent"
            android:layout_margin="5dp"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/text_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Title Text"
            android:textColor="#fff"
            android:textSize="24sp"
            tools:ignore="HardcodedText,InefficientWeight" />

        <ImageButton
            android:id="@+id/button_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_action_phone_start"
            android:background="@android:color/transparent"
            android:layout_margin="5dp"
            tools:ignore="ContentDescription"/>

        <ImageButton
            android:id="@+id/button_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_action_overflow"
            android:background="@android:color/transparent"
            android:layout_margin="5dp"
            tools:ignore="ContentDescription" />
        <!--ContentDescription 为视力障碍用户设置的可播报控件描述-->

</LinearLayout>

